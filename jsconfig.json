{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "jsx": "react-jsx",
    "allowImportingTsExtensions": false,
    "resolveJsonModule": true,
    "allowJs": true,
    "noEmit": true,
    "forceConsistentCasingInFileNames": false
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
